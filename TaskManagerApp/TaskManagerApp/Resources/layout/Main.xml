<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1">
    <GridView
        android:minWidth="25px"
        android:numColumns="1"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="462.5dp"
        android:id="@+id/gridView1"
        android:layout_marginBottom="17.0dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="60.5dp"
        android:id="@+id/linearLayout2">
        <Button
            android:text="@string/btn_insert"
            android:layout_width="128.5dp"
            android:layout_height="match_parent"
            android:id="@+id/button1" />
        <Button
            android:text="@string/btn_list"
            android:layout_width="128.5dp"
            android:layout_height="match_parent"
            android:id="@+id/button2"
            android:layout_marginRight="7.5dp" />
        <Button
            android:text="@string/btn_exit"
            android:layout_width="125.0dp"
            android:layout_height="match_parent"
            android:id="@+id/button3"
            android:layout_marginRight="10.5dp"
            android:layout_marginLeft="0.0dp" />
    </LinearLayout>

</LinearLayout>