<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1">
    <EditText
        android:hint="@string/set_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTask" />
    <EditText
        android:hint="@string/set_local"
        android:inputType="textPostalAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editLocal" />
    <EditText
        android:hint="@string/set_time"
        android:inputType="time"
        android:layout_width="219.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTime" />
    <EditText
        android:hint="@string/set_date"
        android:inputType="date"
        android:layout_width="213.5dp"
        android:layout_height="wrap_content"
        android:id="@+id/editDate"
        android:layout_marginRight="0.0dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_marginBottom="96.5dp"
        android:layout_marginTop="0.0dp">
        <Button
            android:text="@string/btn_insert"
            android:layout_width="186.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_insertAdd" />
        <Button
            android:text="@string/btn_back"
            android:layout_width="184.5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/bt_backAdd" />
    </LinearLayout>
</LinearLayout>